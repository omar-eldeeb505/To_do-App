<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
style="@style/DayBackground"
    android:layout_margin="@dimen/_4sdp"
    android:padding="@dimen/_3sdp"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintBottom_toTopOf="@id/day_of_month"
        tools:text="SUN"

        android:textSize="@dimen/_15ssp"
        style="@style/DayTextColor"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="@dimen/_15ssp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
style="@style/DayTextColor"
        app:layout_constraintEnd_toEndOf="@id/day_of_week"

        app:layout_constraintStart_toStartOf="@id/day_of_week"
        app:layout_constraintTop_toBottomOf="@id/day_of_week"
        tools:text="21" />
</androidx.constraintlayout.widget.ConstraintLayout>