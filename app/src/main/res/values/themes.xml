<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/blue</item>
         <item name="colorSecondary">@color/blue</item>
        <item name="android:statusBarColor">@color/black3</item>
    </style>

    <style name="TodoBackground">
        <item name="android:background">@color/green_mint</item>
    </style>

    <style name="fab_3_circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DayBackground">
        <item name="android:background">@drawable/day_bg</item>
    </style>

    <style name="DayTextColor">
        <item name="android:textColor">#000000</item>
    </style>
<style name="toolbarCalender"><item name="android:background">@color/blue</item></style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="EditTask">
         <item name="android:background">@drawable/edit_text_bg</item>
    </style>
    <style name="Theme.Todo" parent="Base.Theme.Todo" />
</resources>